<%- include("Header.ejs") -%>

    <div class="create_blog cont">
        <h2>Create New Blog.</h2>
        <form action="/compose" method="post">

            <div class="form-group">
                <input class="form-control" type="text" name="title" placeholder="Blog Title">
            </div>
            <div class="form-group">
                <textarea class="form-control" placeholder="Blog Content...." name="content" cols="30"
                    rows="10"></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-lg">Create Blog</button>

        </form>
    </div>

    <%- include("Footer.ejs") -%>